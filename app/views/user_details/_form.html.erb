<%= form_for(@user_detail) do |f| %>
  <% if @user_detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_detail.errors.count, "error") %> prohibited this user_detail from being saved:</h2>
      <ul>
        <% @user_detail.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.fields_for :user do |field| %>
    <%= field.label "First Name" %>
    <%= field.text_field :first_name %>
    <%= field.label "Last Name" %>
    <%= field.text_field :last_name %>
    <%= field.label "Email" %>
    <%= field.text_field :email %>
    <%= field.label "Password" %>
    <%= link_to "Change your password", edit_user_registration_path %>
  <% end %>

  <div class="field">
    <%= f.label "Street Address" %>
    <%= f.text_field :street_add %>
  </div>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label "State/Region" %>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>
  <div class="field">
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %>
  </div>
  <div class="field">
    <%= f.label :gender %>
    <%= f.radio_button :gender, "Male" %><%= f.label "Male" %>
    <%= f.radio_button :gender, "Female" %><%= f.label "Female" %>
  </div>
  <div class="actions">
    <input type="submit" value="Save Changes" name="commit"/>
  </div>
<% end %>
