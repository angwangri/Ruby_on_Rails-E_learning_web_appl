                </tr>
                <tr>
                  <th><label><%= t 'sign_up.last_name' %></label>
                  </th>
                  <td><%= f.text_field :last_name %>
                  </td>
                </tr>
                <tr>
                  <th><label><%= t 'sign_up.email' %></label>
                  </th>
                  <td><%= f.email_field :email %>
                  </td>
                </tr>
                <tr>
                  <th><label><%= t 'sign_up.password' %></label>
                  </th>
                  <td><%= f.password_field :password %>
                  </td>
                </tr>
                <tr>
                  <td colspan="2">
                    <input type="checkbox" style="float:left;" id="agree" name="agree"/>
                    <label for="agree">&nbsp; <%= t 'sign_up.i_agree' %><% unless session[:locale] == 'cn'%>&nbsp;<% end %><a href="javascript:void(0);" onclick="$('#terms_model').modal();"><%= t 'sign_up.terms_and_conditions' %>
                        </a></label>
                  </td>
                </tr>
                 <tr>
                   <td colspan="2">
                <div class="submit_btn_box">
                      <%= t 'sign_up.submit.html' %>
                    </div>
                   </td>
                 </tr>
              </table>
          <% end %>
        </div>
      </div>
      <div class="form_bot_txt">
        <%= t('sign_up.already_sign_in') %>
        <a href="/users/sign_in"> <%= t('sign_up.already_sign_in_here') %></a><br/><br/><br/>
        <%= t('sign_up.teacher_search_txt') %>
        <a href="/tutors/search"> <%= t('sign_up.teacher_search_txt_here') %></a><br/>
        <%= t('sign_up.create_acc_txt') %>
      </div>



