<div class="wrapper ">
  <div class="full_wht_bg wdth40">
  <div class="teachers_page">

      <p><%= t 'sign_up.create_profile' %></p>

      <div class="row" style="margin-left: 0">
        <div class="well">
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <% if (devise_error_messages! == "Email has already been taken") %>
             <div style="margin-bottom:10px;">“Sure this is you? <a href="/users/password/new"><%= t 'sign_in.forget_pass' %></a>”</div>
          <% end %>
              <table>
                <tr>
                  <th><label><%= t 'sign_up.first_name' %></label>
                  </th>
                  <td><%= f.text_field :first_name, :autofocus => true %>
