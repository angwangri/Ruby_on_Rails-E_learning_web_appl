
<div class="wrapper" >
<div class="nice-box custom_nice_box " id="login">
  <div class="header">
    
    <h2><%= t('basic_info.change_pass_box_heading') %></h2>
  </div>
  <div class="body">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :style => "margin-bottom:0px;" }) do |f| %>
        <%= devise_error_messages! %>


        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>


        <div><%= f.label "#{t('basic_info.old_pass')}" %>
        <%= f.password_field :current_password, :class => "text-field" %></div>
          
        <div><%= f.label "#{t('basic_info.new_pass')}" %>
        <%= f.password_field :password, :autocomplete => "off", :class => "text-field" %></div>

        <div><%= f.label "#{t('basic_info.confirm_new_pass')}" %>
        <%= f.password_field :password_confirmation, :class => "text-field" %></div>

        <div><%= f.submit "#{t('basic_info.change_pass_btn')}",:class => "btn btn-medium btn-success" %></div>
      <% end %>
    </div>
  </div>
</div>

