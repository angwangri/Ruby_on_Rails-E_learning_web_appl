<div class="wrapper" >
  <div class="full_wht_bg wdth40">
    <div class="login_box_1" id="login">
      <div class="login_header">
    
    <h2><%= t 'confirmation.Resend confirmation instructions' %></h2>
  </div>
  <div class="body">
		<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
		  <%= devise_error_messages! == "Confirmation token是无效的" ? "您的确认是无效的。" : devise_error_messages! %>

		  <div><%= f.label :email %><br />
		  <%= f.email_field :email, :autofocus => true, :class => "text-field" %></div>

		  <div style="margin-bottom:10px;text-align:center;"><%= f.submit t("confirmation.Resend confirmation instructions"),:class => "btn-orange" %></div>
		<% end %>

		<%= render "devise/shared/links" %>
  </div>
</div>
</div>
</div>


